{% extends "base.html.twig" %}

{% block title %}coucou
{% endblock %}

{% block body %}
	</section>
	<h1 class="display-4 bg-warning border border-white border-2 border-top-0 text-muted rounded-top rounded-5 p-3 mx-3 d-flex justify-content-around shadow">Mes notes</h1>

	<div class="container">


		<div class="mt-3 row d-flex justify-content-around ">
			{% for note in listenotes %}
				<div class="card shadow border border-white rounded-4 mt-3 bg-warning  note" style="width: 18rem;">
					<div class="card-body">
						<h5 class="card-title">{{note.sujet}}</h5>
						<h6 class="card-subtitle mb-2 text-muted ">{{note.theme}}</h6>
						<p class="card-text">{{note.contenu}}</p>
						
					</div>
				</div>
		{% endfor %}
		</div>
		
	</div>
<script src="https://unpkg.com/scrollreveal"></script>
<script>
{# ScrollReveal().reveal('.note', {rotate: {
        y: 60,
		z: 20
    },duration: 1500,scale: 0.85  }) #}
ScrollReveal().reveal('.note',
{
	distance: '500%',
    origin: 'right',
    opacity: null,
	duration: 400,
	interval: 300,
	rotate:{y:50,z:50}
	})
</script>
{% endblock %}
